BB=/sbin/busybox;
DEVICE=/res/synapse/files/shamu.sh;

TIMESTAMP=`date +%Y-%m-%d.%H.%M.%S`;
LOGS=/sdcard/logs;
DEBUG=/res/synapse/debug;

case $1 in
	bootloader)	
		$BB echo `sh $DEVICE ToggleBootloader`;
	;;
	tamper)	
		$BB echo `sh $DEVICE ToggleTamper`;
	;;
	selinux)	
		if [[ ! -z $2 ]]; then
			if [ $2 = "Enforcing" ]; then
				setenforce 1;
				$BB touch /data/.selinux_enabled 2> /dev/null;
			elif [ $2 = "Permissive" ]; then
				setenforce 0;
				$BB rm -f /data/.selinux_enabled 2> /dev/null;
			fi;
		fi;

		$BB echo `getenforce`;
	;;
	optimizedb)
		for i in `$BB find /data -iname "*.db"`; do 
			/res/synapse/files/sqlite3 $i 'VACUUM;' 2> /dev/null;
			/res/synapse/files/sqlite3 $i 'REINDEX;' 2> /dev/null;
		done;

		for i in `$BB find /sdcard -iname "*.db"`; do
			/res/synapse/files/sqlite3 $i 'VACUUM;' 2> /dev/null;
			/res/synapse/files/sqlite3 $i 'REINDEX;' 2> /dev/null;
		done;
		
		$BB echo "Databases have been optimized.";
	;;
	logcat)
		saved="$LOGS/logcat-$TIMESTAMP.txt";
		[ ! -d "$LOGS" ] && $BB mkdir -p "$LOGS";
		$BB chmod 755 $LOGS;
		
		logcat -d > $saved;
	;;
	dmesg)
		saved="$LOGS/dmesg-$TIMESTAMP.txt";
		[ ! -d "$LOGS" ] && $BB mkdir -p "$LOGS";
		$BB chmod 755 $LOGS;
		
		$BB dmesg > $saved;
	;;
	kmsg)
		kmsg=/proc/last_kmsg;
		if [ -f $kmsg ]; then
			saved="$LOGS/last_kmsg-$TIMESTAMP.txt";
			[ ! -d "$LOGS" ] && $BB mkdir -p "$LOGS";
			$BB chmod 755 $LOGS;
			
			$BB cp -f $kmsg $saved;
		else
			$BB echo "$kmsg not found.";
		fi;
	;;
	alllogs)
		[ ! -d "$LOGS/$TIMESTAMP" ] && $BB mkdir -p "$LOGS/$TIMESTAMP";
		$BB chmod 755 $LOGS/$TIMESTAMP;
		logmsg="$LOGS/$TIMESTAMP/logcat.txt";
		dmsg="$LOGS/$TIMESTAMP/dmesg.txt";
		logcat -d > $logmsg;
		$BB dmesg > $dmsg;
		$BB cp $DEBUG/* $LOGS/$TIMESTAMP/ 2> /dev/null;
		$BB cp /sys/fs/pstore/* $LOGS/$TIMESTAMP/ 2> /dev/null;
		cd $LOGS/$TIMESTAMP/
		zip -r logs.zip .
		$BB mv $LOGS/$TIMESTAMP/logs.zip $LOGS/logs-$TIMESTAMP.zip
		$BB rm -rf $LOGS/$TIMESTAMP
		$BB echo "Logs saved to $LOGS/logs-$TIMESTAMP.zip";
	;;
	reboot)
		$BB sleep 1;
		reboot $2;
	;;
	cleardata)
		am force-stop com.af.synapse 2> /dev/null;
		$BB sleep 1;
		$BB rm -R /data/data/com.af.synapse/databases;
		$BB sleep 3;
		am start -a android.intent.action.MAIN -n com.af.synapse/.MainActivity 2> /dev/null;
	;;
esac;

case $1 in
	logcat|dmesg|kmsg)
		$BB echo "Logfile saved to $saved";
	;;
esac;
